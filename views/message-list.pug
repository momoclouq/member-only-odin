extends layout 

block content 
    h1 List of all messages 
    ol
        each message in messages 
            div(class="message")
                div(class="messageid") #[a(href=message.url) #{message._id}]
                div(class="username") #[a(href=message.user.url) #{message.user.username}]
                div(class="title") #{message.title}
                div(class="content") #{message.content}
                div(class="timestamp") #{message.timestamp}

    if error 
        div #{error}
