extends layout 

block content 
    h1 Create a new account 
    form(action="" method="POST")
        label(for="username") Username 
        input(name="username" id="username" type="text" required="true")
        label(for="password") Password 
        input(name="password" id="password" type="password" required="true")
        label(for="password-re") Type password again 
        input(name="password-re" id="password-re" type="password" required="true")
        hr
        label(for="first_name") First name 
        input(type="text" name="first_name" id="first_name" placeholder="Alex" required="true")
        label(for="last_name") Last name
        input(type="text" name="last_name" id="last_name" placeholder="doge" required="true") 
        hr
        input(type="submit" value="Create account")

    if errors 
        each error in errors 
            div #{error.msg}